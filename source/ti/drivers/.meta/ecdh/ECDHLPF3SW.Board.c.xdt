/*
 *  ======== ECDHLPF3SW.Board.c.xdt ========
 */

    let ECDH    = args[0];
    let Common    = system.getScript("/ti/drivers/Common.js");

    let instances = ECDH.$instances;
    if (instances.length == 0) return;

    let declarations = Common.genBoardDeclarations(instances);

    /* CONFIG_XXXCOUNT string, derived from defaultInstanceName */
    let countDef = ECDH.defaultInstanceName + "COUNT";

%%}
/*
 *  =============================== ECDH ===============================
 */

#include <ti/drivers/ECDH.h>
#include <ti/drivers/ecdh/ECDHLPF3SW.h>

#define `countDef` `instances.length`

ECDHLPF3SW_Object ecdhLpf3swObjects[`countDef`];

/*
 *  ======== ecdhLpf3swHWAttrs ========
 */
const ECDHLPF3SW_HWAttrs ecdhLpf3swHWAttrs[`countDef`] = {
% for (let i = 0; i < instances.length; i++) {
    {0},
% }
};

const ECDH_Config ECDH_config[`countDef`] = {
% for (let i = 0; i < instances.length; i++) {
%     let inst    = instances[i];
    {   /* `inst.$name` */
        .object         = &ecdhLpf3swObjects[`inst.$name`],
        .hwAttrs        = &ecdhLpf3swHWAttrs[`inst.$name`]
    },
% }
};

`declarations`
const uint_least8_t ECDH_count = `countDef`;
