/*
 *  =============================== ECDSA ===============================
 */

#include <ti/drivers/ECDSA.h>
#include <ti/drivers/ecdsa/ECDSALPF3HSM.h>

#define `countDef` `instances.length`
ECDSALPF3HSM_Object ecdsaLpf3HsmObjects[`countDef`];

/*
 *  ======== ecdsaLpf3HsmHWAttrs ========
 */
const ECDSALPF3HSM_HWAttrs ecdsaLpf3HsmHWAttrs[`countDef`] = {
% for (let i = 0; i < instances.length; i++) {
    {0},
% }
};

const ECDSA_Config ECDSA_config[`countDef`] = {
% for (let i = 0; i < instances.length; i++) {
%     let inst    = instances[i];
    {   /* `inst.$name` */
        .object         = &ecdsaLpf3HsmObjects[`inst.$name`],
        .hwAttrs        = &ecdsaLpf3HsmHWAttrs[`inst.$name`]
    },
% }
};

`declarations`
const uint_least8_t ECDSA_count = `countDef`;
